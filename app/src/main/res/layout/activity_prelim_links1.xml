<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="@drawable/gradient_background"
    android:layout_height="match_parent"
    tools:context=".prelimLinks1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/anc"
        android:background="@drawable/bannerteacher"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:clickable="true"
                android:id="@+id/backk"
                android:padding="20dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/arrow"/>
            <ImageView
                android:padding="20dp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="250dp"
                android:src="@drawable/student"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Other Learning Resources"
                android:textColor="#fff"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/anc"
        android:background="@drawable/linkbg"
        android:layout_margin="20dp"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="20sp"
            android:id="@+id/links"
            android:text="Useful Learning Websites "
            android:textColor="#fff"/>
        <TextView

            android:layout_below="@+id/links"
            android:layout_marginTop="10dp"
            android:id="@+id/link1"
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/PW1link1"
         />
    <TextView

        android:layout_below="@+id/link1"
        android:layout_marginTop="10dp"
        android:id="@+id/link2"
        android:layout_width="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_height="wrap_content"
        android:text="@string/PW1link2"
      />
    </LinearLayout>




</RelativeLayout>